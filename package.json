{
	"name": "darkpdf",
	"version": "1.0.0",
	"description": "A dark mode for viewing PDF's.",
	"private": true,
	"author": "Tony Faieta <tfaieta@gmail.com>",
	"license": "MIT",
	"homepage": "./",
	"main": "public/electron.js",
	"keywords": [
		"Example",
		"React",
		"Electron"
	],
	"scripts": {
		"dev": "yarn react-scripts start",
		"build": "react-scripts build",
		"start": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
		"pack": "electron-builder --dir",
		"dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always",
		"electron-toolkit": "electron ./node_modules/electron-toolkit"
	},
	"dependencies": {
		"antd": "^3.9.2",
		"electron-is-dev": "^0.3.0",
		"electron-publisher-s3": "^20.17.2",
		"electron-toolkit": "^1.0.24",
		"react": "^16.4.1",
		"react-dev-utils": "^5.0.1",
		"react-dom": "^16.5.1",
		"react-dropzone": "^5.1.0",
		"react-pdf": "^3.0.5",
		"wait-on": "^3.0.1"
	},
	"devDependencies": {
		"concurrently": "^3.6.0",
		"cross-env": "^5.2.0",
		"electron": "^2.0.3",
		"electron-builder": "^20.18.0",
		"electron-devtools-installer": "^2.2.4",
		"react-scripts": "1.1.4",
		"version-bump-prompt": "^4.1.0"
	},
	"build": {
		"appId": "SU7SD7P8R8.com.tess.darkpdf",
		"compression": "normal",
		"productName": "DarkPDF",
		"directories": {
			"buildResources": "build",
			"output": "dist"
		},
		"mac": {
			"icon": "assets/icon.icns",
			"type": "distribution",
			"target": [
				"pkg",
				"dmg",
				"mas"
			],
			"publish": {
				"provider": "s3",
				"bucket": "darkpdf-releases",
				"path": "releases"
			},
			"category": "public.app-category.news"
		},
		"mas": {
			"entitlements": "assets/entitlements.mas.plist",
			"entitlementsInherit": "assets/entitlements.mas.inherit.plist",
			"provisioningProfile": "assets/embedded.provisionprofile"
		},
		"win": {
			"target": "nsis",
			"icon": "assets/icon.ico",
			"publish": {
				"provider": "s3",
				"bucket": "darkpdf-releases",
				"path": "releases"
			}
		},
		"linux": {
			"icon": "assets/icon.png",
			"target": [
				"snap",
				"AppImage"
			],
			"description": "A dark mode PDF viewer.",
			"category": "Network;Feed",
			"publish": {
				"provider": "s3",
				"bucket": "darkpdf-releases",
				"path": "releases"
			}
		}
	}
}
